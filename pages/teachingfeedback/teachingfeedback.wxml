<view class="opinion_wrap">
    <view class="wrap">
            <view class="contant_wrap">
                <view class="contant">
                    <textarea name="feedback"  auto-height placeholder-class="placeholder" placeholder="为了带给您更好的体验,期待您的任何反馈,我们将会不断改进"  bindinput="feedbackInput"/>
                </view>
            </view>
            <view class="phone">
                <input name="contact" placeholder-class="placeholder" placeholder="您的手机号或者邮箱,方便我们及时给您回复"  bindinput="contactInput"/>
            </view>
            <button   bindtap="loginBtnClick">提交</button>
              <view>{{infoMess}}</view>
    </view>
</view>